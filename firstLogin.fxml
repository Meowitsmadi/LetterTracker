<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="50.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChangePassController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="750.0" prefWidth="600.0">
         <children>
            <Label prefHeight="150.0" prefWidth="557.0" text="Welcome to Letter Tracker!" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </Label>
            <VBox fillWidth="false" prefHeight="200.0" prefWidth="480.0">
               <children>
                  <Label prefHeight="45.0" prefWidth="240.0" text="Change Password" textFill="#2e17c6">
                     <VBox.margin>
                        <Insets bottom="20.0" left="60.0" />
                     </VBox.margin>
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label alignment="BOTTOM_RIGHT" layoutX="10.0" layoutY="75.0" prefHeight="45.0" prefWidth="187.0" text="Old Password:">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtOldPassword" layoutX="70.0" layoutY="141.0" opacity="0.72" prefHeight="51.0" prefWidth="380.0">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="30.0" left="60.0" right="60.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Label alignment="BOTTOM_RIGHT" prefHeight="45.0" prefWidth="187.0" text="New Password:">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNewPassword" opacity="0.72" prefHeight="51.0" prefWidth="380.0">
                     <VBox.margin>
                        <Insets bottom="30.0" left="60.0" right="60.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
                  <Label alignment="BOTTOM_RIGHT" prefHeight="28.0" prefWidth="258.0" text="Confirm New Password:">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtConfirmPassword" opacity="0.72" prefHeight="51.0" prefWidth="380.0">
                     <VBox.margin>
                        <Insets bottom="30.0" left="60.0" right="60.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="480.0">
               <children>
                  <Label fx:id="status" alignment="CENTER" prefHeight="17.0" prefWidth="491.0" textFill="RED">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#SaveNewPassword" prefHeight="50.0" prefWidth="93.0" text="Save" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="60.0" right="60.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
